<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OperationButton">
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:background">#9156E2</item>
    </style>

    <style name="EqualsButton">
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:background">#E62F89</item>
    </style>

    <style name="ResultTextView">
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:textSize">80dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="HistoryOperationTextView">
        <item name="android:textColor">#C67386</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">right</item>
    </style>
</resources>